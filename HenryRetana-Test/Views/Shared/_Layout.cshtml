<!DOCTYPE html>
@{
    var user = HenryRetana_Test.BS.UtilitiesBusiness.GetSession();
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - News Feed</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-dark bg-dark fixed-top">
        <div class="container">            
            @if (user != null)
            {
                @Html.ActionLink("News Feed", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation" title="Menu">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <h3 class="nav-item">
                            <a class="nav-link" href="#">Welcome @user.Name</a>
                        </h3>
                        @Html.ActionLink("Management", "Index", "Management", new { }, new { @class = "nav-item nav-link" })
                        <hr />
                        @Html.ActionLink("Logout", "Logout", "Home", new { }, new { @class = "nav-item nav-link" })
                    </div>
                </div>
            }
            else
            {
                @Html.ActionLink("News Feed", "Login", "Home", new { area = "" }, new { @class = "navbar-brand" })
            }
        </div>
    </nav>
    <div class="body-content">
        <br />
        @RenderBody()
        <hr />
        <footer class="container">
            <p>&copy; @DateTime.Now</p>
        </footer>
    </div>

    @* JQuery Sections *@
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    jQuery(document).ready(function ($) { });
</script>