@model List<NewsFeed>
@{
    ViewBag.Title = "News";
    var user = new Users();
    if (Session["User"] != null)
    {
        user = (Users)Session["User"];
    }
}
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="list-group">
                @Html.ActionLink("My News", "Index", "Management", new { @class = "list-group-item list-group-item-action active" })
                @Html.ActionLink("My Subscriptions", "Subscriptions", "Management", new { @class = "list-group-item list-group-item-action" })
            </div>
        </div>
        <div class="col-sm-9">
            <p>
                <a class="btn btn-primary" data-toggle="collapse" href="#collapseNew" role="button" aria-expanded="false" aria-controls="collapseNew">
                    Add New
                </a>
            </p>
            <div class="collapse" id="collapseNew">
                <div class="card card-body">
                    @using (Html.BeginForm("AddNew", "Management", FormMethod.Post, new { id = "loginForm" }))
                    {
                        <h1>New</h1>

                        <label for="title">Title</label>
                        <input type="text" name="Title" id="title" class="form-control" placeholder="Title" required="" autofocus="">

                        <label for="description">Password</label>
                        <textarea class="form-control rounded-0" id="description" rows="3" name="Description"></textarea>

                        <label for="description">Password</label>
                        @Html.DropDownList("FeedId", HenryRetana_Test.BS.FeedBusiness.GetFeedList(user.Id), "Select Feed", new { @class = "form-control", required = "" })
                        @Html.CheckBox("Active", true, new { @checked = "checked" }) <span>Active</span>
                        <br />
                        <button class="btn btn-primary" type="submit">Save</button>
                        <button class="btn btn-secondary" type="button" data-toggle="collapse" data-target="#collapseNew">Cancel</button>
                    }
                </div>
                <br />
            </div>
            @if (Model.Any())
            {
                foreach (var item in Model)
                {
                    var active = item.Active != null && (bool)item.Active ? "Active" : "Inactive";
                    <div class="card" style="height: 11rem;">
                        <div class="card-header">
                            <b>@item.Feed.Name</b>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><b>@active</b> - <small class="text-muted">Created By: @item.Users.Name</small> - <small class="text-muted">Date: @item.CreateDate</small></p>
                        </div>
                    </div>
                    <br />
                }
            }
            else
            {
                <div class="alert alert-info" role="alert">
                    No data to show!
                </div>
            }
        </div>
    </div>
</div>

